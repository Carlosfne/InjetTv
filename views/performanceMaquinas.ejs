<!DOCTYPE html>
<html lang=en>
    <head>
        <meta charset=UTF-8>
        <meta name=viewport content="width=device-width, initial-scale=1">
        <link rel=stylesheet href=/assets/css/materialize.min.css />
        <link rel=stylesheet href=/styles/css/performance.css />
        <script>
            let secondsTransition = '<%=secondsTransition%>';
            let nextPage = '<%=nextPage%>';
        </script>
    </head>

    <body style="background-color: <%=cor_fundo%>;">
        <header>
            <div id="header-item" class="row">
                <div class="col s1">
                    <button class="light-blue darken-2 right btn waves-effect waves-light" id=clear>
                        <i class="material-icons">clear</i>                                
                        <i class="material-icons">home</i>
                    </button>
                </div>
                <p class="header-text col s6">Produtividade</p>
                <p class="header-text col s5 center-align" id="time"></p>
            </div>
        </header>

        <main>
            <% pts.forEach((pt) => { %>
                <div class="row align-wrapper flex" id=circle1>
                    <div class="item flex-item-1 grow0" >
                        <i class="material-icons" style='color: <%= pt.icone.caminhoIcone %>; text-align: justify'>lens</i>
                    </div>
                    <div class="item flex-item-1 grow0">
                        <i class="material-icons" style='color: <%= pt.icone.corTriangulo %>; text-align: justify'>lens</i>
                    </div>
                    <div class="item flex-item-1" style="color: <%= pt.icone.caminhoIcone %>; text-align: justify; margin-left: 50px">
                        <%= pt.cdPt %>
                    </div>
                    <div class="item flex-item-1" style="color: <%= pt.icone.caminhoIcone %>; text-align: justify">
                        <%= pt.indicadores.indiceProdutividadeOEE %>%
                    </div>
                    <div class="item flex-item-1 descricao" style="color: <%= pt.icone.caminhoIcone %>; text-align: justify">
                        <%= pt.dsProduto %>
                    </div>
                </div>
            <% }) %>
        </main>

        <footer>
            <div class="col l12">
                <div class=row>
                    <table class="centered">
                        <thead>
                            <td></td>
                            <% bi.indicadoresTurno.forEach(function(indicadoresTurno){ %>
                                <td style="text-align: center;"><%=indicadoresTurno.dsTurno%>%</td>
                            <% }); %>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Atual</td>
                                <% atual.indicadoresTurno.forEach(function(indicadoresTurno){ %>
                                    <td><%=indicadoresTurno.indicadores.indOEE%>%</td>
                                <% }); %>
                            </tr>
                            <tr>
                                <td>No mÃªs</td>
                                <% bi.indicadoresTurno.forEach(function(indicadoresTurno){ %>
                                    <td><%=indicadoresTurno.indicadores.indOEE%>%</td>
                                <% }); %>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </footer>

        <script src=/assets/jquery.min.js></script>
        <script src=/scripts/carousel.js></script>
        <script src=/scripts/clear.js></script>
        <script src=/scripts/clock.js></script>
    </body>
</html>